# Description: Linux GLX port of the Really Slick Screensavers
# URL: http://rss-glx.sourceforge.net/
# Maintainer: Matt Housh, jaeger at morpheus dot net
# Depends on: xscreensaver

name=rss-glx
version=0.8.1
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/${name}_${version}.tar.bz2)

build() {
	cd ${name}_${version}
	./configure --prefix=/usr \
		--with-configdir=/usr/share/xscreensaver/config \
		--disable-sound
	make
	make DESTDIR=$PKG install
	rm -f $PKG/*.desktop
	mkdir -p $PKG/usr/lib/xscreensaver
	(cd $PKG/usr/lib/xscreensaver
	 for i in $PKG/usr/bin/*
	 do
		ln -s /usr/bin/`basename $i`
	 done)
}
