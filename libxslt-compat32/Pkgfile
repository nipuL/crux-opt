# Description: XSL Transformations library
# URL: http://xmlsoft.org/XSLT/
# Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Arch Maintainer: Lucas Hazel, lucas at die dot net dot au
# Depends on: libxslt libxml2-compat32

name=libxslt-compat32
version=1.1.26
release=1
source=(ftp://xmlsoft.org/libxml2/libxslt-$version.tar.gz)

compat32_dep_check $name libgcrypt || exit 1

build() {
    cd libxslt-$version
    ./configure --prefix=/usr \
	--libdir=/usr/lib32 \
	--with-libxml-libs-prefix=/usr/lib32 \
	--program-suffix=32 \
	--without-python
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/{include,man,share}
    rm $PKG/usr/bin/xsltproc32;
}

