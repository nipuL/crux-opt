# Description: a comprehensive desktop publishing program
# URL: http://www.scribus.org.uk
# Maintainer:
# Packager: 
# Depends on: qt3, cups, python

name=scribus
version=1.2.4.1
release=2
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --disable-debug
    make
    make prefix=$PKG/usr install
    find $PKG/usr/{lib/scribus/dicts,share/scribus/doc}/* \
        ! -wholename "*doc/en*" ! -wholename "*hyph_en.dic*" -delete
    rm -rf $PKG/usr/man/pl/
}
