# Description: A fast, 3D multiplayer tank battle game.
# URL: http://bzflag.org/
# Maintainer:

name=bzflag
version=2.0.8
release=1
source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure 	--prefix=/usr
	make
	make DESTDIR=$PKG install
}
