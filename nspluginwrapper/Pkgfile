# Description: Run plugins built for other architectures
# URL: http://gwenole.beauchesne.info//en/projects/nspluginwrapper
# Maintainer: Lucas Hazel, lucas at die dot net dot au
# Depends on:

name=nspluginwrapper
version=1.1.2
release=1
source=(http://gwenole.beauchesne.info/projects/$name/files/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	    --with-lib32=lib32 \
	    --enable-viewer \
	    --enable-player
	make
	make DESTDIR=$PKG install
}
