# Description: Bash completion functions

name=bash-completion
version=1.1
release=1
source=(http://$name.alioth.debian.org/files/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr --sysconfdir=/etc
    make
    make DESTDIR=$PKG install
}
