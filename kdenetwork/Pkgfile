# Description: Network-related programs and modules for KDE
# URL: http://www.kde.org
# Maintainer: sten, nick dot steeves at shaw dot ca
# Packager: 
# Depends on: ppp, openldap, kdebase, wireless-tools

name=kdenetwork
version=3.5.2
release=2
source=(http://download.kde.org/stable/3.5.2/src/$name-$version.tar.bz2\
    lisa)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --disable-debug \
        --disable-dependency-tracking \
        --enable-final
    make
    make DESTDIR=$PKG install
    install -D ../lisa $PKG/etc/rc.d/lisa
    cp debian/lisarc $PKG/etc/lisa.conf
}
