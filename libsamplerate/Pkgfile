# Description: A sample rate converter for audio.
# URL: http://www.mega-nerd.com/SRC/
# Maintainer:

name=libsamplerate
version=0.1.2
release=1
source=(http://www.mega-nerd.com/SRC/libsamplerate-0.1.2.tar.gz)

build() {
	cd $name-$version
	./configure 	--prefix=/usr
	make
	make DESTDIR=$PKG install
}
