# Description: Extensible Binary Meta-Language
# URL: http://ebml.sourceforge.net
# Maintainer:
# Packager: 

name=libebml
version=0.7.7
release=1
source=(http://dl.matroska.org/downloads/$name/$name-$version.tar.bz2)

build() {
    cd $name-$version
    cd make/linux
    make
    make -e prefix=$PKG/usr install
}
