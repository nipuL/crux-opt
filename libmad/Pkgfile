# Description: High-quality MPEG Audio Decoder library
# URL: http://www.underbit.com/products/mad/
# Maintainer: Simon Gloßner, viper at hometux dot de
# Arch Maintainer: Antti Nykanen, aon at iki dot fi

name=libmad
version=0.15.1b
release=3
source=(http://dl.sourceforge.net/mad/${name}-${version}.tar.gz \
        mad.pc)

build() {
    mkdir -p $PKG/usr/lib/pkgconfig/
    sed "s/#version#/$version/" mad.pc > $PKG/usr/lib/pkgconfig/mad.pc

    cd $name-$version
    sed -i 's:-fforce-mem::' configure

    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
}
