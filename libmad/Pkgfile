# Description: High-quality MPEG Audio Decoder library
# URL: http://www.underbit.com/products/mad/
# Maintainer: Jukka Heino, jukka dot heino at gmail dot com
# Packager: Rene Thümmler, rene dot thuemmler at gmx dot net
# Depends on:

name=libmad
version=0.15.1b
release=3
source=(ftp://ftp.mars.org/pub/mpeg/$name-$version.tar.gz \
        mad.pc)

build() {
	mkdir -p $PKG/usr/lib/pkgconfig/
	sed "s/#version#/$version/" mad.pc > $PKG/usr/lib/pkgconfig/mad.pc
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
