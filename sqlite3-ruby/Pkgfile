# Description: Interface to the SQLite DB engine
# URL:         http://sqlite-ruby.rubyforge.org/
# Maintainer:  Jürgen Daubert, juergen dot daubert at t-online dot de
# Depends on:  ruby, swig, sqlite3

name=sqlite3-ruby
version=1.2.0
release=1
source=(http://rubyforge.org/frs/download.php/16340/$name-$version.tar.bz2)

build() {
    cd $name-$version
    ruby setup.rb config 
    ruby setup.rb setup
    ruby setup.rb install --prefix=$PKG
}
