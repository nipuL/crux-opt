# Description: Remote mail retriever similar to fetchmail
# URL:         http://pyropus.ca/software/getmail/
# Maintainer:  Jukka Heino, jukka dot heino at gmail dot com
# Packager:    Jukka Heino, jukka dot heino at gmail dot com
# Depends on:  python

name=getmail
version=4.6.2
release=1
source=(http://pyropus.ca/software/$name/old-versions/$name-$version.tar.gz \
        $name.patch)

build() {
	cd $name-$version
	patch -p1 < $SRC/$name.patch
	python setup.py install --root=$PKG
	rm -rf $PKG/usr/share
}
