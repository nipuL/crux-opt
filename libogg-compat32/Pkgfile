# Description: Ogg bitstream and framing library
# URL:         http://www.xiph.org/ogg/
# Maintainer:  Tilman Sauerbeck, tilman at crux dot nu
# Arch Maintainer: Tilman Sauerbeck, tilman at crux dot nu
# Depends: libogg

name=libogg-compat32
version=1.1.3
release=1
source=(http://downloads.xiph.org/releases/ogg/libogg-$version.tar.gz)

build() {
    cd libogg-$version
    ./configure --prefix=/usr \
	--libdir=/usr/lib32
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/{include,share}
}
