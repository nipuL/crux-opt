# Description: FastCGI support for Perl
# URL: http://search.cpan.org/~skimo/FCGI-0.67/
# Maintainer: Jukka Heino, jukka dot heino at gmail dot com
# Packager: Jukka Heino, jukka dot heino at gmail dot com
# Depends on: 

name=p5-fcgi
version=0.67
release=1
source=(http://search.cpan.org/CPAN/authors/id/S/SK/SKIMO/FCGI-$version.tar.gz)

build() {
    cd FCGI-$version
    perl Makefile.PL
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/lib/perl5/5.8.? \
           $PKG/usr/lib/perl5/site_perl/5.8.?/linux/auto/FCGI/.packlist \
           $PKG/usr/lib/perl5/site_perl/5.8.?/linux/auto/FCGI/FCGI.bs
}
